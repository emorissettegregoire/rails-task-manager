<h1>Tasks</h1>
 <% @tasks.each do |task| %>
   <ul>
   <% if task.completed %>
      <li>[X] <%=link_to task.title, task_path(task.id)%></li>
     <% else %>
      <li>[ ] <%=link_to task.title, task_path(task.id)%></li>
   <% end %>
    </ul>
 <% end %>

<form method="get" action="/tasks/new">
    <button type="submit">Add a new task</button>
</form>

